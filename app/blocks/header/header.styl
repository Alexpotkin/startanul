.header
  position fixed
  top 0
  left 0
  right 0
  z-index 100
  
  height 80px
  
  background #fff
  border-bottom 1px solid #FCDE2A
  

  &__inner
    container($site-width)
    
    display flex
    align-items center
    justify-content space-between
    
    height 80px
    padding 0 16px
  

  &__left
    display flex
    align-items center
  

  &__logo
    position relative
    top -4px
    
    display block
    margin-right 16px
    size(136px, 45px)
    
    img
      display block
      size(136px, 45px)
  
  &__title
    display block
    
    font-size 24px
    line-height 1
    font-weight 300
    
    color #404041
  

  &__right
    position relative
    
    display flex
    align-items center
  

  &__phone
    display block

    font-size 24px
    font-weight 300 
    line-height 1.2
    
    color #404041
    cursor pointer
    border-bottom 1px dashed
    
    &:hover, &.js-active
      color #E0A726
    
    &.js-active
      .popup
        visibility visible
        opacity 1
    
    .popup
      top 100%
      top calc(100% + 6px)
      right 20px
      
      &:before
        left 50%
        transform translateX(-50%)
    


  &__avatar
    &.js-active
      .header__avatar-icon
        background-image svg('avatar.svg', '[fill]: #404041')
      
      .popup
        visibility visible
        opacity 1
    
    &-icon
      size(40px)
      margin-left 16px
      
      background-image svg('login.svg', '[fill]: #BCBEC0')
      background-size cover
      
      cursor pointer
      transition background .05s ease
      
      &:hover
        background-image svg('avatar.svg', '[fill]: #BCBEC0')
      
    
    .popup
      top 100%
      top calc(100% + 6px)